from wallaby import *
import constants as c
import movement as m
import linefollow as f

def drive_square():
    print "Starting drive_square"
    m.drive()
    print "First drive done"
    msleep(1000)
    print "Wait"
    m.turn_right() #turn right
    msleep(1000)
    print "Wait"
    m.drive()
    msleep(1000)
    print "Wait"
    print "Second drive done"
    m.turn_right()
    msleep(1000)
    print "Wait"
    m.drive()
    msleep(1000)
    print "Wait"
    print "Third drive done"
    m.turn_right()
    msleep(1000)
    print "Wait"
    m.drive()
    msleep(1000)
    print "Wait"
    print "Fourth drive done"   
