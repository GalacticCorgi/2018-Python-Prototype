from wallaby import *
import constants as c
import movement as m

def lfollow_right_bstop(time):
    print "Starting lfollow_right_bstop()"
    sec = seconds() + time
    while seconds() < sec and analog(c.left_tophat)<c.left_tophat_bw:
        print "Tophat: %d"%analog(c.left_tophat)
        if c.BlackRight():
            mav(c.left_motor,1000)
            print "Black"
        elif not c.BlackRight():
            mav(c.right_motor,-1000)
            print "White!"
        msleep(30)
        mav(c.left_motor,0)
        mav(c.right_motor,0)

def lfollow_left_bstop(time):
    print "Starting lfollow_left_bstop()"
    sec = seconds() + time
    while seconds() < sec and analog(c.right_tophat)<c.right_tophat_bw:
        print "Tophat: %d"%analog(c.right_tophat)
        if  not c.BlackLeft():
            mav(c.left_motor,1000)
            print "Black"
        elif c.BlackLeft():
            mav(c.right_motor,-1000)
            print "White!"
        msleep(30)
        mav(c.left_motor,0)
        mav(c.right_motor,0)
        
        
def depth_line_follow_right():
    print "Starting line_follow_right()"
    while analog(c.depth_sensor)<c.depth_mid:
        print "Tophat: %d"%analog(c.left_tophat)
        print "Depth: %d"%analog(c.depth_sensor)
        if c.BlackRight():
            mav(c.left_motor,1000)
            print "Black"
        else:
            mav(c.right_motor,-1000)
            print "White"
        msleep(30)
        mav(c.left_motor,0)
        mav(c.right_motor,0)
                

def line_follow_right(time):
    print "Starting line_follow_right()"
   #while digital(c.bump_sensor)==0:
    sec = seconds() + time
    while seconds() < sec and analog(c.depth_sensor)<c.depth_mid:
        print "Read: %d"%analog(c.left_tophat)
        if c.BlackRight():
            mav(c.left_motor,1000)
            print "Black"
        elif not c.BlackRight():
            mav(c.right_motor,-1000)
            print "White!"
        msleep(30)
        mav(c.left_motor,0)
        mav(c.right_motor,0)
                
def b_line_follow_right(time):
    print "Starting line_follow_right()"
    sec = seconds() + time
    while seconds() < sec and analog(c.left_tophat)<c.left_tophat_bw:
        print "Tophat: %d"%analog(c.left_tophat)
        print "Depth: %d"%analog(c.depth_sensor)
        if analog(c.depth_sensor)>c.depth_mid:
            msleep(100)
        elif c.BlackRight():
            mav(c.left_motor,1000)
            print "Black"
        elif not c.BlackRight():
            mav(c.right_motor,-1000)
            print "White!"
        msleep(30)
        mav(c.left_motor,0)
        mav(c.right_motor,0)

def b_line_follow_left(time):
    print "Starting line_follow_left()"
    sec = seconds() + time
    while seconds() < sec and analog(c.right_tophat)<c.right_tophat_bw:
        print "Tophat: %d"%analog(c.right_tophat)
        print "Depth: %d"%analog(c.depth_sensor)
        if analog(c.depth_sensor)>c.depth_mid:
            msleep(100)
        elif not c.BlackLeft():
            mav(c.left_motor,1000)
            print "Black"
        elif c.BlackLeft():
            mav(c.right_motor,-1000)
            print "White!"
        msleep(30)
        mav(c.left_motor,0)
        mav(c.right_motor,0)

                
def line_follow_left_time():
    print "Starting line_follow_left()"
    sec = seconds() + time
    while seconds() < sec:
        print "Read: %d"%analog(c.left_tophat)
        if c.BlackLeft():
            mav(c.right_motor,-1000)
            print "Black"
        else:
            mav(c.left_motor,1000)
            print "White"              
        msleep(30)
        mav(c.left_motor,0)      
        mav(c.right_motor,0)       
                
